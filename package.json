{
    "private": true,
    "scripts": {
        "startApi": "   node    -r source-map-support/register ./dist/api/www.js",
        "startReadme": "node    -r source-map-support/register ./dist/readme/generateReadme.js",
        "watchApi": "   nodemon -r source-map-support/register ./dist/api/www.js",
        "devApi": "  cross-env NODE_ENV=development webpack --watch --config build/webpack.config.api.ts",
        "devReadme": "  cross-env NODE_ENV=development webpack --watch --config build/webpack.config.readme.ts",
        "devWeb": "  cross-env NODE_ENV=development webpack serve   --config build/webpack.config.web.ts",
        "buildApi": "cross-env NODE_ENV=production  webpack         --config build/webpack.config.api.ts",
        "buildReadme": "cross-env NODE_ENV=production  webpack         --config build/webpack.config.readme.ts",
        "buildWeb": "cross-env NODE_ENV=production  webpack         --config build/webpack.config.web.ts && cross-env NODE_ENV=production  webpack --config build/webpack.config.ssg.ts",
        "stageWeb": "cross-env NODE_ENV=development webpack         --config build/webpack.config.web.ts && cross-env NODE_ENV=development webpack --config build/webpack.config.ssg.ts",
        "dev": "  concurrently 'yarn devApi'   'yarn devReadme'   'yarn devWeb'",
        "build": "concurrently 'yarn buildApi' 'yarn buildReadme' 'yarn buildWeb'",
        "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore ."
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-typescript"
        ],
        "plugins": [
            [
                "@babel/transform-runtime"
            ],
            [
                "babel-plugin-root-import",
                {
                    "paths": [
                        {
                            "rootPathSuffix": "./src/",
                            "rootPathPrefix": "@/"
                        }
                    ]
                }
            ]
        ]
    },
    "dependencies": {
        "@octokit/rest": "^18.6.7",
        "@vue/server-renderer": "^3.1.1",
        "animate.css": "^4.1.1",
        "axios": "^0.21.1",
        "concurrently": "^6.2.0",
        "dayjs": "^1.10.6",
        "express": "^4.17.1",
        "highlight.js": "^11.1.0",
        "http-errors": "^1.8.0",
        "jsdom": "^16.6.0",
        "lodash": "^4.17.21",
        "medium-zoom": "^1.0.6",
        "morgan": "^1.10.0",
        "pluralize": "^8.0.0",
        "vue": "^3.1.4",
        "vue-meta": "^3.0.0-alpha.9",
        "vue-router": "^4.0.10"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/plugin-transform-runtime": "^7.14.5",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-typescript": "^7.12.7",
        "@babel/register": "^7.13.14",
        "@types/copy-webpack-plugin": "^8.0.0",
        "@types/express": "^4.17.12",
        "@types/http-errors": "^1.8.0",
        "@types/jsdom": "^16.2.10",
        "@types/lodash": "^4.14.171",
        "@types/mini-css-extract-plugin": "^2.0.0",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14",
        "@types/pluralize": "^0.0.29",
        "@types/webpack": "^5.28.0",
        "@types/webpack-dev-server": "^3.11.3",
        "@types/webpack-manifest-plugin": "^3.0.4",
        "@types/webpack-node-externals": "^2.5.1",
        "@typescript-eslint/eslint-plugin": "^4.4.0",
        "@typescript-eslint/parser": "^4.2.0",
        "@vue/compiler-sfc": "^3.0.11",
        "babel-plugin-root-import": "^6.6.0",
        "copy-webpack-plugin": "^9.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.1.0",
        "dotenv": "^10.0.0",
        "eslint": "^7.9.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-vue": "^7.0.1",
        "html-webpack-plugin": "^5.3.1",
        "mini-css-extract-plugin": "^2.0.0",
        "null-loader": "^4.0.1",
        "puppeteer-prerender-plugin": "^2.4.0",
        "responsive-loader": "^2.3.0",
        "sass": "^1.32.8",
        "sass-loader": "^12.0.0",
        "sharp": "^0.28.1",
        "sitemap-webpack-plugin": "^1.1.1",
        "ts-loader": "^9.1.1",
        "typescript": "^4.3.2",
        "vue-loader": "^16",
        "webpack": "^5.28.2",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^3.11.2",
        "webpack-manifest-plugin": "^3.1.1",
        "webpack-node-externals": "^3.0.0"
    },
    "resolutions": {
        "@types/webpack": "^5.28.0",
        "webpack": "^5.28.2"
    }
}
